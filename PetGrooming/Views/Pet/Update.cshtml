@model PetGrooming.Models.ViewModels.UpdatePet


@{
    ViewBag.Title = "Update";
}

<h2>Update a Pet</h2>
<form action="/Pet/Update/@Model.pet.PetID" method="POST">
    <span>Pet Name</span><input type="text" value="@Model.pet.PetName" id="PetName" name="PetName" /><br />
    <span>Pet Color</span><input type="text" value="@Model.pet.Color" id="PetColor" name="PetColor" /><br />
    <span>Pet Weight</span><input type="text" value="@Model.pet.Weight" id="PetWeight" name="PetWeight" /><br />
    <span>Species : </span></span>
    <select></select>
    @{
        foreach (var species in Model.species)
        {
            string selected = "";
            if (species.SpeciesID == Model.pet.SpeciesID)
            {
                selected = "selected";
            }

            <option value="@species.SpeciesID">@species.Name</option>

        }
    }}

    <div>
        <span>Pet Notes</span>
        <textarea id="PetNotes" name="PetNotes">@Model.pet.Notes</textarea>
    </div>
    <input type="submit" value="update pet" />
</form>

<div>
    <a href="/Pet/List">Back To List</a>
</div>
